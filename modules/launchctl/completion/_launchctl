#compdef launchctl

local -a common_commands
common_commands=(
    'load:load plist files or directories'
    'unload:unload plist files or directories'
    'submit:run a program without a plist file'
    'remove:remove job by label'
    'start:start job by label'
    'stop:stop job by label'
    'list:list jobs'
)

local -a env_commands
env_commands=(
    'setenv'
    'unsetenv'
    'getenv'
    'export'
)

local -a other_commands
other_commands=(
    'help:show help'
)

_describe -t common_commands 'common commands' common_commands
_describe -t env_commands 'commands for environment variables' env_commands
_describe -t other_commands 'other commands' other_commands

_arguments \
  '*:plist files:_files -g "*.plist"'

