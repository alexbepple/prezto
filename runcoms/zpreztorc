# Set the Prezto modules to load (browse modules).
# The order matters.
zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'fs' \
  'completion' \
  'prompt'

pmodload 'svn' 'git'
pmodload 'java' 'javascript' 'ruby' 'python'


